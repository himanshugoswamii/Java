package Session18;

import java.util.*;

public class KBCJavaProject {
	static Scanner sc =new Scanner(System.in);
	static int prize=0;
	static int count=0;
	static boolean b=true;
	static boolean c=true;
	
	
	static void Q1()
	{
		System.out.println("Q1)Which country has the 4th highest army personnel in the world? ");
		System.out.println("1:India\t2:Russia\n3:North Korea\t4:United States of America");
		System.out.println("You have two lifelines\n5:(50/50)\n6:Double Dip ");
		System.out.println("Do you  want to use a lifeline?\nPress 7 for yes\nPress 8 for no");
		int x =sc.nextInt();
		if(x==7){
			if(b==true){
			System.out.println("Press 5 for (50/50)");}
			if(c==true){
			System.out.println("Press 6 for Double Dip");}
			if(b==true || c==true){
				int y=sc.nextInt();
				if(y==5){
					System.out.println("2:Russia\n3:North Korea");
					b=false;
					System.out.println("Select your answer");
					int a=sc.nextInt();
					if(a==3){
						System.out.println("Congratulations!!!you have answered correctly:))),the correct answer is North Korea");
						count++;
						System.out.println("You have won 5000Rs.");
						prize=prize+5000;
					}
					else{
						System.out.println("Oops!!!Sorry you lost:(((Better luck next time");
						System.exit(0);
					}
				}
				else if(y==6){
					c=false;
					System.out.println("Select your first option");
					int p=sc.nextInt();
					System.out.println("Select your second option");
					int q=sc.nextInt();
					if(p==3||q==3){
						System.out.println("Congratulations!!!you have answered correctly:)))");
						count++;
						System.out.println("You have won 5000Rs.");
						prize=prize+5000;
					}
					else{
						System.out.println("Oops!!!Sorry you lost:(((Better luck next time");
						System.exit(0);
					}
				}	
			}
		}
		else{
			
			System.out.println("Select your answer");
			int a=sc.nextInt();
			if(a==3){
				System.out.println("Congratulations!!!you have answered correctly:))),the correct answer is North Korea");
				count++;
				System.out.println("You have won 5000Rs.");
				prize=prize+5000;
			}
			else{
				System.out.println("Oops!!!Sorry you lost:(((Better luck next time");
				System.exit(0);
			}
		}
	}
	
	static void Q2(){
